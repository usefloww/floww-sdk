{
  "name": "@DeveloperFlows/floww-sdk",
  "version": "1.0.0",
  "description": "SDK for building trigger-based workflows",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DeveloperFlows/floww-sdk.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "floww": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "floww": "tsx src/cli/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run",
    "test:examples": "tsx examples/triggers.ts",
    "prepublishOnly": "pnpm build",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "version:prerelease": "npm version prerelease --preid=beta --no-git-tag-version",
    "lint": "oxlint"
  },
  "keywords": [
    "trigger",
    "workflow",
    "automation",
    "sdk"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.9.0",
  "dependencies": {
    "@DeveloperFlows/floww-sdk": "link:",
    "@clack/core": "^0.5.0",
    "@clack/prompts": "^0.11.0",
    "@types/inquirer": "^9.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "centrifuge": "^5.2.4",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.1",
    "consola": "^3.4.2",
    "execa": "^9.6.0",
    "fastify": "^5.6.1",
    "ink": "^6.3.1",
    "inquirer": "^12.9.6",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "log-symbols": "^7.0.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "open": "^10.2.0",
    "pino-pretty": "^13.1.1",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.6.2",
    "@types/node-cron": "^3.0.11",
    "oxlint": "^1.24.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
